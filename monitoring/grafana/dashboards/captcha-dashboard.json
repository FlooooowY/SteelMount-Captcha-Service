{
  "dashboard": {
    "id": null,
    "title": "Captcha Service Dashboard",
    "tags": ["captcha", "security"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (RPS)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(captcha_requests_total[5m])",
            "legendFormat": "{{instance}}"
          }
        ],
        "yAxes": [
          {
            "label": "requests/sec"
          }
        ]
      },
      {
        "id": 2,
        "title": "Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(captcha_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(captcha_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(captcha_errors_total[5m])",
            "legendFormat": "{{type}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Active Challenges",
        "type": "singlestat",
        "targets": [
          {
            "expr": "captcha_active_challenges"
          }
        ]
      },
      {
        "id": 5,
        "title": "Security Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(captcha_security_events_total[5m])",
            "legendFormat": "{{event_type}}"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}
